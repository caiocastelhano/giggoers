<div class="container mt-4">
  <h1 class="text-center text-white my-4">Saiba Mais</h1>

  <div class="event-details-container">
    <div class="card shadow-sm border-0 rounded-3">
      <% if @event.url_image.present? && @event.url_image != "" %>
        <%= image_tag @event.url_image, class: "card-img-top event-image rounded-3", alt: @event.title %>
      <% else %>
        <%= image_tag "default-event-image.jpg", class: "card-img-top event-image rounded-3", alt: "Imagem padrão do evento" %>
      <% end %>

      <div class="card-body">
        <h2 class="card-title event-title text-center text-primary mb-3"><%= @event.title %></h2>

        <!-- Data e Local com texto branco -->
        <div class="event-details mb-3 text-white">
          <p>
            <strong>Data:</strong>
            <%= @event.start_date.strftime("%d/%m/%Y") %>
            às <%= @event.start_time.strftime("%H:%M") if @event.start_time %>
          </p>

          <p>
            <strong>Local:</strong>
            <%= @event.venue.name %>,
            <%= @event.venue.address %>
          </p>
        </div>

        <!-- Descrição com texto branco -->
        <div class="event-description mb-3 text-white">
          <p><%= @event.description %></p>
        </div>

        <!-- Flex container para gêneros e valor do evento na mesma linha -->
        <div class="d-flex justify-content-between align-items-center mb-3">
          <!-- Gêneros -->
          <div>
            <h5 class="text-primary">Gêneros</h5>
            <div class="d-flex flex-wrap">
              <% @event.genres.each do |genre| %>
                <span class="badge bg-secondary me-2 mb-2"><%= genre.name %></span>
              <% end %>
            </div>
          </div>

          <!-- Preço -->
          <div>
            <span class="badge bg-primary fs-5">
              R$ <%= number_with_precision(@event.price, precision: 2) %>
            </span>
          </div>
        </div>

      </div>

      <%= link_to "Acesse para comprar", @event.purchase_link,
        class: "btn btn-info rounded-15 py-3 mx-auto d-block",
        style: "width: 80%;",
        target: "_blank",
        rel: "noopener noreferrer" %>

    </div>
  </div>
</div>
