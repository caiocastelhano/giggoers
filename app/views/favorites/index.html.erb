<div class="container mt-4">
  <%# Container principal com margem superior %>

  <h2 class="text-white text-center mb-4">Minha Agenda</h2>
  <%# Título com texto branco, centralizado e margem inferior %>

  <% if @favorites.present? %>
    <%# Ordenar favoritos por data de início e agrupá-los por mês %>
    <% sorted_favorites = @favorites.sort_by { |favorite| favorite.event.start_date } %>
    <% grouped_by_month = sorted_favorites.group_by { |favorite| favorite.event.start_date.beginning_of_month } %>

    <% grouped_by_month.each do |month, favorites| %>
      <h3 class="text-secondary mt-4"><%= month.strftime("%B %Y") %></h3>
      <%# Subtítulo com o mês formatado e estilo cinza %>

      <div class="row">
        <% favorites.each do |favorite| %>
          <div class="col-12 col-md-6 col-lg-4 mb-4">
            <%# Coluna responsiva com margem inferior %>
            <div class="card position-relative shadow-sm">
              <%# Card com sombra leve %>

              <%# Imagem do evento %>
              <%= image_tag(favorite.event.url_image, class: "card-img-top rounded-top", alt: "Imagem do evento") if favorite.event.url_image.present? %>

              <%# Botão de coração %>
              <a href="#" class="position-absolute top-0 end-0 m-2 text-dark" style="z-index: 1; font-size: 1.5rem;">
                <i class="fas fa-heart"></i>
              </a>

              <%# Corpo do Card %>
              <div class="card-body">
                <h3 class="card-title"><%= favorite.event.title %></h3>
                <%# Título truncado para evitar overflow %>
                <p class="card-text mt-2 text-muted"><%= truncate(favorite.event.description, length: 100) %></p>

                <%# Detalhes do evento %>
                <div class="d-flex justify-content-between align-items-center mt-3">
                  <small class="text-muted">
                    <%= favorite.event.start_date.strftime("%d/%m/%Y") %>
                    <% if favorite.event.start_time %>
                      às <%= favorite.event.start_time.strftime("%H:%M") %>
                    <% end %>
                  </small>
                  <span class="badge bg-primary">
                    R$ <%= number_with_precision(favorite.event.price, precision: 2, delimiter: ".") %>
                  </span>
                </div>

                <%# Gêneros do evento %>
                <div class="mt-3">
                  <% favorite.event.genres.each do |genre| %>
                    <span class="badge bg-secondary"><%= genre.name %></span>
                  <% end %>
                </div>
              </div>

              <%# Rodapé do Card com botões de ação %>
              <div class="card-footer d-flex justify-content-around">
                <%= link_to "Ver detalhes", event_path(favorite.event), class: "btn btn-sm btn-primary" %>
                <%= link_to 'Remover', favorite_path(favorite),
                  class: 'btn btn-sm btn-danger',
                  data: { turbo_method: :delete, turbo_confirm: 'Tem certeza que deseja remover este evento da sua agenda?' } %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  <% else %>
    <p class="text-muted text-center">Você ainda não tem eventos favoritos.</p>
    <%# Mensagem centralizada para quando não houver favoritos %>
  <% end %>
</div>
