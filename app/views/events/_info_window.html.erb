<div class="p-3">
  <h5 class="mb-2 font-weight-bold"><%= event.title %></h5>
  <p class="mb-1"><i class="bi bi-geo-alt"></i> <%= venue.name %></p>
  <p class="mb-1"><i class="bi bi-calendar"></i> <%= event.start_date.strftime("%d/%m/%Y") %></p>
  <p class="mb-2"><i class="bi bi-clock"></i> <%= event.start_time.strftime("%H:%M") %></p>
  <% if event.price.present? %>
    <p class="mb-2"><strong>R$ <%= number_with_precision(event.price, precision: 2) %></strong></p>
  <% end %>
  <%= link_to "Ver detalhes", event_path(event), class: "btn btn-primary btn-sm corner-rounded" %>
</div>
