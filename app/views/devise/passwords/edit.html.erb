<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header text-center bg-light" id="login-header">
          <!-- TÃ­tulo com cor escura -->
          <h2 class="text-dark">Mudar senha</h2>
        </div>
        <div class="card-body">
          <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "needs-validation" }) do |f| %>
            <%= f.error_notification %>

            <%= f.input :reset_password_token, as: :hidden %>
            <%= f.full_error :reset_password_token %>

            <div class="form-inputs">
              <!-- Campo Nova Senha -->
              <div class="mb-3">
                <%= f.input :password,
                            label: "Nova senha",
                            required: true,
                            hint: ("#{@minimum_password_length} caracteres no mÃ­nimo" if @minimum_password_length),
                            input_html: { autocomplete: "new-password", class: "form-control text-dark" },
                            label_html: { class: "form-label" } %>
              </div>

              <!-- Campo Confirmar Nova Senha -->
              <div class="mb-3">
                <%= f.input :password_confirmation,
                            label: "Confirmar nova senha",
                            required: true,
                            input_html: { autocomplete: "new-password", class: "form-control text-dark" },
                            label_html: { class: "form-label" } %>
              </div>
            </div>

            <div class="form-actions text-center">
              <%= f.button :submit, "Confirmar mudanÃ§a", class: "btn btn-primary w-100" %>
            </div>
          <% end %>
        </div>
      </div>
      <div class="text-center mt-3">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
