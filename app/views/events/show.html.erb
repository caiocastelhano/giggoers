<div class="event-details-container text-center">
  <!-- Título do evento -->
  <h1 class="event-title"><%= @event.title %></h1>

  <!-- Imagem do evento -->
  <% if @event.url_image.present? %>
    <img src="<%= @event.url_image %>" class="event-image img-fluid" alt="<%= @event.title %>">
  <% else %>
    <img src="default-image.jpg" class="event-image img-fluid" alt="Imagem não disponível">
  <% end %>

  <!-- Descrição -->
  <p class="event-description"><%= @event.description %></p>

  <!-- Local e Data -->
  <div class="event-details">
    <p><strong>Local:</strong> <%= @event.venue.name %> - <%= @event.venue.address %></p>
    <p><strong>Data:</strong> <%= @event.start_date.strftime("%d/%m/%Y") %></p>
    <p><strong>Hora:</strong> <%= @event.start_time.strftime("%H:%M") if @event.start_time %></p>
  </div>

  <!-- Botão de Ingressos -->
  <a href="#" class="btn btn-primary">Ingressos</a>
</div>


